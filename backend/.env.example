# Database Configuration
DATABASE_URL=sqlite:///./data/app.db

# Encryption Key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-generated-fernet-key-here

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Cookie Settings (for HTTP vs HTTPS deployments)
# For HTTPS: COOKIE_SECURE=true, COOKIE_SAMESITE=none (default)
# For HTTP:  COOKIE_SECURE=false, COOKIE_SAMESITE=lax
COOKIE_SECURE=true
COOKIE_SAMESITE=none

# Camera Settings
MAX_CAMERAS=1  # MVP limitation: single camera only
DEFAULT_FRAME_RATE=5

# SSL/HTTPS Configuration (Story P9-5.1)
# SSL is required for push notifications to work
SSL_ENABLED=false  # Enable HTTPS (requires valid certificates)
SSL_CERT_FILE=  # Path to SSL certificate file (PEM format), e.g., data/certs/cert.pem
SSL_KEY_FILE=  # Path to SSL private key file (PEM format), e.g., data/certs/key.pem
SSL_REDIRECT_HTTP=true  # Redirect HTTP to HTTPS when SSL is enabled
SSL_MIN_VERSION=TLSv1_2  # Minimum TLS version (TLSv1_2 or TLSv1_3)
SSL_PORT=443  # HTTPS port when SSL is enabled

# HomeKit Integration (Story P4-6.1)
HOMEKIT_ENABLED=false  # Enable HomeKit accessory server
HOMEKIT_PORT=51826  # HAP server port (default: 51826)
HOMEKIT_BRIDGE_NAME=ArgusAI  # Display name in Home app
HOMEKIT_MANUFACTURER=ArgusAI  # Manufacturer shown in Home app
HOMEKIT_PERSIST_DIR=data/homekit  # Directory for pairing state
# HOMEKIT_PINCODE=031-45-154  # Optional: Set specific pairing code (auto-generated if not set)
